#! /usr/bin/make -f

#export DH_VERBOSE = 1

%:
	dh $@ --with python-virtualenv

override_dh_virtualenv:
	dh_virtualenv --python python3.8 --extra-pip-arg "--no-index" --extra-pip-arg "--find-links=file://${PWD}/debian/pypi"

override_dh_installinit:
	dh_installsystemd --no-stop-on-upgrade --no-start --no-enable
